{% set readOperationType = constant('Odiseo\\SyliusRbacPlugin\\Access\\Model\\OperationType::READ') %}
{% set writeOperationType = constant('Odiseo\\SyliusRbacPlugin\\Access\\Model\\OperationType::WRITE') %}
{% set administration_role = hookable_metadata.context.resource %}
{% set permissions = hookable_metadata.context.permissions %}
{% set rolePermissions = hookable_metadata.context.rolePermissions %}
<div class="container-xl">
    <form name="sylius_rbac_administration_role" method="post" novalidate="novalidate" id="sylius_rbac_administration_role_form"
          data-controller="compound-form-errors"
          action={{ path('sylius_rbac_admin_administration_role_update', {'id': administration_role.id}) }}>
        <div class="card-body">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <div id="sylius_rbac_administration_role">
                            <div class="mb-3 field">
                                <label for="sylius_rbac_administration_role_name"
                                       class="form-label required">{{ 'sylius.ui.name'|trans }}</label>
                                <input type="text" id="sylius_rbac_administration_role_name"
                                       name="administration_role_name" required="required" maxlength="50"
                                       class="form-control" value="{{ administration_role.name }}">
                            </div>

                            <table class="table card-table table-vcenter" id="permission_table">
                                <thead>
                                <tr>
                                    <th>{{ 'sylius_rbac.ui.permissions'|trans }}</th>
                                    <th>{{ 'sylius_rbac.ui.permission.operation_type.read'|trans }}</th>
                                    <th>{{ 'sylius_rbac.ui.permission.operation_type.write'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for permission in permissions %}
                                    {% if  permission not in ['catalog_management', 'configuration', 'customers_management', 'marketing_management', 'sales_management'] %}
                                        {% set is_write_access_granted = false %}
                                        {% set is_read_access_granted = false %}

                                        {% for rolePermission in rolePermissions %}
                                            {% if rolePermission.type == permission %}
                                                {% set is_write_access_granted = (writeOperationType in rolePermission.operationTypes) %}
                                                {% set is_read_access_granted = (readOperationType in rolePermission.operationTypes) %}
                                            {% endif %}
                                        {% endfor %}
                                        <tr>
                                            <td data-label={{ 'sylius_rbac.ui.permissions'|trans }}>{{ ('sylius_rbac.ui.permission.' ~ permission)|trans }}</td>
                                            <td data-label={{ 'sylius_rbac.ui.permission.operation_type.read'|trans }}>
                                                <div class="ui toggle checkbox">
                                                    {% set permissionReadOperationType = "permissions[" ~ permission ~ "][" ~ readOperationType ~ "]" %}
                                                    <input type="checkbox"
                                                           id={{ permissionReadOperationType }} name={{ permissionReadOperationType }} {% if is_read_access_granted %} checked="checked"{% endif %}>
                                                </div>
                                            </td>
                                            <td data-label={{ 'sylius_rbac.ui.permission.operation_type.write'|trans }}>
                                                <div class="ui toggle checkbox">
                                                    {% set permissionWriteOperationType = "permissions[" ~ permission ~ "][" ~ writeOperationType ~ "]" %}
                                                    <input type="checkbox"
                                                           id={{ permissionWriteOperationType }} name={{ permissionWriteOperationType }} {% if is_write_access_granted %} checked="checked"{% endif %}>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
