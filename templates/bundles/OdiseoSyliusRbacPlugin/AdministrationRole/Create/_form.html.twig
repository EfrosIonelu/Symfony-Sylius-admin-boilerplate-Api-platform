{% set readOperationType = constant('Odiseo\\SyliusRbacPlugin\\Access\\Model\\OperationType::READ') %}
{% set writeOperationType = constant('Odiseo\\SyliusRbacPlugin\\Access\\Model\\OperationType::WRITE') %}

{% set permissions = hookable_metadata.context.permissions %}

<div class="container-xl">
    <form name="sylius_rbac_administration_role" novalidate="novalidate" id="sylius_rbac_administration_role_form"
          data-controller="compound-form-errors" method="post"
          action={{ path('sylius_rbac_admin_administration_role_create') }}>
        <div class="card-body">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <div id="sylius_rbac_administration_role">
                            <div class="mb-3 field">
                                <label for="sylius_rbac_administration_role_name"
                                       class="form-label required">{{ 'sylius.ui.name'|trans }}</label>
                                <input type="text" id="sylius_rbac_administration_role_name"
                                       name="administration_role_name" required="required" maxlength="50"
                                       class="form-control" value="">
                            </div>

                            <table class="ui celled table" id="permission_table">
                                <thead>
                                <tr>
                                    <th>{{ 'sylius_rbac.ui.permissions'|trans }}</th>
                                    <th>{{ 'sylius_rbac.ui.permission.operation_type.read'|trans }}</th>
                                    <th>{{ 'sylius_rbac.ui.permission.operation_type.write'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for permission in permissions %}
                                    {% if  permission not in ['catalog_management', 'configuration', 'customers_management', 'marketing_management', 'sales_management'] %}
                                        <tr>
                                            <td data-label={{ 'sylius_rbac.ui.permissions'|trans }}>{{ ('sylius_rbac.ui.permission.' ~ permission)|trans }}</td>
                                            <td data-label={{ 'sylius_rbac.ui.permission.operation_type.read'|trans }}>
                                                <div class="ui toggle checkbox">
                                                    {% set permissionReadOperationType = "permissions[" ~ permission ~ "][" ~ readOperationType ~ "]" %}
                                                    <input type="checkbox"
                                                           id={{ permissionReadOperationType }} name={{ permissionReadOperationType }}>
                                                </div>
                                            </td>
                                            <td data-label={{ 'sylius_rbac.ui.permission.operation_type.write'|trans }}>
                                                <div class="ui toggle checkbox">
                                                    {% set permissionWriteOperationType = "permissions[" ~ permission ~ "][" ~ writeOperationType ~ "]" %}
                                                    <input type="checkbox"
                                                           id={{ permissionWriteOperationType }} name={{ permissionWriteOperationType }}>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
